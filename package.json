{
  "name": "menuplanner",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "prepare": "husky",
    "auth:generate": "pnpm -F @menuplanner/auth generate",
    "db:generate": "turbo -F @menuplanner/db generate",
    "db:migrate": "turbo -F @menuplanner/db migrate",
    "db:push": "turbo -F @menuplanner/db push",
    "db:studio": "turbo -F @menuplanner/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @menuplanner/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@menuplanner/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "catalog:",
    "turbo": "^2.6.1",
    "typescript": "catalog:"
  },
  "prettier": "@menuplanner/prettier-config"
}
